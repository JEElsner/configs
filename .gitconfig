[core]
	editor = code

[gpg]
	format = ssh

[user]
	name = Jonathan Elsner
	email = jeelsner@outlook.com

[pull]
	ff = only

[include]
	# Import SSH key from file not tracked in configuration repository
	# on windows, make sure this file has LF not CRLF line endings (git will not be happy if you have windows line endings)
	path = ~/.config/git/ssh-key

[rerere]
	enabled = true
	autoUpdate = true

[alias]
	pfwl = push --force-with-lease
	brinfo = branch -vv

[init]
	defaultBranch = main
